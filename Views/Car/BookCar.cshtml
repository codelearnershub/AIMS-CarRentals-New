@model AimsCarRentals.Models.ViewModel.CreateBookingsViewModel
@{
    ViewData["Title"] = "BookCar";
}

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav a {
                float: left;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: #4CAF50;
                    color: white;
                }

        .topnav-right {
            float: right;
        }
    </style>
</head>
<body>

    <div class="topnav">
        <a class="active" asp-controller="Home" asp-action="Index">NijMar</a>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Branch" asp-action="SelectBranch">Branches</a>
        <a asp-controller="Car" asp-action="SelectCar">Car</a>
        <div class="topnav-right">
            <a href="#about">About</a>
            <a asp-controller="Auth" asp-action="Logout">Logout</a>
        </div>
    </div>
</body>

<div class="content" style="background-color:azure">
    <div class="container">
        <form method="post">
            <div class="card">
                <div class="justify-content-center">
                    <div class="justify-content-center">
                        <div class="card-header"><h2>PickUp Date And Time</h2></div>
                    </div>
                    <div class="card-body">
                        <div class="input-group">
                            @if(ViewBag.Message == "Not Allowed")
            {
                <p style="color:red;background-color:black">Date Not Valid. Date should be present date or greater than the present bate</p>
            }
                            <label>Pickup Date</label>
                            <div class="col-md-4">
                                <input asp-for="PickUpDate" class="form-control" placeholder="Pick-Up Date" />
                                <span type="datetime" asp-validation-for="PickUpDate" class="text-danger"></span><br>

                            </div>


                            <label>Return Date</label>
                            <div class="col-md-4">
                                <input asp-for="ReturnDate" class="form-control" placeholder="Return Date" />
                                <span asp-validation-for="ReturnDate" class="text-danger"></span><br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />

            <div class="justify-content-between">
                <div>
                    <button type="submit" class="btn btn-danger">Continue</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    window.onscroll = function () { myFunction() };

    var navbar = document.getElementById("navbar");
    var sticky = navbar.offsetTop;

    function myFunction() {
        if (window.pageYOffset >= sticky) {
            navbar.classList.add("sticky")
        } else {
            navbar.classList.remove("sticky");
        }
    }
</script>



    


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    function Booked()
    {
        var booked = document.getElementById('bookaction')
    }
</script>

}


