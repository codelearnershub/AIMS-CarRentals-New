@model AimsCarRentals.Models.ViewModel.CreateCarViewModel
@{ ViewData["Title"] = "Add Car"; }

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <h2>Add A Car</h2>
        <div class="card-body">
            <div class="form-group row">
                <div class="col-md-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-md-4">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Make"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Make" class="form-control" />
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>
                </div>

                <div class="input-group">
                    <b><label>Price</label></b>
                    <div class="col-md-4">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <b>
                                    <label asp-for="PlateNo"></label>
                                </b>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="PlateNo" class="form-control" />
                                <span asp-validation-for="PlateNo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="input-group">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <b>
                                        <label asp-for="Description"></label>
                                    </b>
                                    <div class="col-md-8">
                                        <input asp-for="Description" class="form-control" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div>
                                    <div class="col-md-4">
                                        <b>
                                            <label>Image</label>
                                        </b>
                                        <div class="col-md-4">
                                            <input type="file" name="files" asp-for="CarPictureUrl" multiple />
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group">
                                    <div class="form-group">
                                        <label asp-for="CategoryId" class="control-label"></label>
                                        <select class="form-control" name="CategoryId" asp-items="@Model.CategoryList">
                                            <option disabled selected>--Select Category--</option>
                                        </select>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div><br /> &nbsp;
                                    <div class="form-group">
                                        <label asp-for="BranchId" class="control-label"></label>
                                        <select class="form-control" name="BranchId" asp-items="@Model.BranchList">
                                            <option disabled selected>--Select Location--</option>
                                        </select>
                                        <span asp-validation-for="BranchId" class="text-danger"></span>
                                    </div>
                                    <br />
                                </div>
                                <div class="alert success">
                                    <span class="closebtn">&times;</span>
                                    <strong>Success!</strong> Indicates a successful or positive action.
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                                    </div>
                                &nbsp;
                                <div>
                                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .alert {
            padding: 20px;
            background-color: #f44336;
            color: white;
            opacity: 1;
            transition: opacity 0.6s;
            margin-bottom: 15px;
        }

            .alert.success {
                background-color: #4CAF50;
            }

            .alert.info {
                background-color: #2196F3;
            }

            .alert.warning {
                background-color: #ff9800;
            }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

            .closebtn:hover {
                color: black;
            }
    </style>
</head>
