@model IEnumerable<AimsCarRentals.Models.ViewModel.CarViewModel>
<head>    
<meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav a {
                float: left;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: #4CAF50;
                    color: white;
                }

        .topnav-right {
            float: right;
        }
    </style>
    </head>
    <body>

        <div class="topnav">
            <a class="active" asp-controller="Home" asp-action="Index">NijMar</a>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Branch" asp-action="SelectBranch">Branches</a>
            <a asp-controller="Car" asp-action="SelectCar">Car</a>
          
        </div>
    </body>
    <div class="card-header">
        <div class="text-center">
            <h1 class="display-2" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Available Cars</h1>
        </div>
        <br />
    </div><div class="row">
        @foreach (var car in Model)
        {
            @* <div class="col-md-4">*@

            <div class="col-lg-4 col-md-4 pb-4">
                <!-- Card-->
                <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
                    <div class="card-body px-3 pt-3 pb-1 row">
                        <div class="col-7"><label class="float-left" style="color:cornflowerblue">@car.Name&nbsp;@car.Make</label></div>
                        <div class="col-5"><label class="float-right"><span class="text-info h5"><span><b>N</b></span>@car.Price</span></label> </div>
                    </div>
                    <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WC.ImagePath@car.CarPictureUrl" alt="Card image cap">
                    <div class="card-body p-1 px-3 row">
                        <div class="col-12 p-1">
                            <a class="btn btn-dark form-control btn-sm p-2" style="height:40px">@car.Category.Name</a>
                        </div>
                        <div class="col-6">
                            <span class="badge p-2 border w-100" style="background-color:lavenderblush">
                                <a asp-controller="Car" asp-action="BookCar" asp-route-Id="@car.Id">Book</a>
                            </span>
                        </div>
                        <div class="col-6 border-0">
                            <span class="badge p-2 border w-100" style="background-color:aliceblue">
                                <a asp-controller="Car" asp-action="Details" asp-route-Id="@car.Id">Details</a>
                            </span>
                        </div>
                        <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                            <p> ShortDesc</p>
                        </div>

                    </div>
                </div>
            </div>
            @* </div>*@

        }
    </div>
