@model IEnumerable<AimsCarRentals.Models.ViewModel.CategoryViewModel>
@{
    ViewData["Title"] = "Category";
    int id = 1;
}

<style>
    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: left;
        padding: 16px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }
</style>
<a asp-controller="Category" asp-action="Create" class="btn btn-danger">Create Category</a>

<h2>Category Table</h2>
<a asp-action="Create" class="btn-dark" style="width:100%">Create</a>
<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@(id++)</td>
            <td>@category.Name</td>
            <td>
                <a  asp-action="Details" class="btn btn-danger" asp-route-Id="@category.Id">Details</a>
                <a  asp-action="Edit" class="btn btn-danger" asp-route-Id="@category.Id">Edit</a>
                <a  asp-action="Delete" class="btn btn-danger" asp-route-Id="@category.Id">Delete</a>
            </td>
        </tr>
    }
</table>

