                            <div class="card mb-3">

                                <div class="card-body">

                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Register an Account</h5>
                                        <p class="text-center small">Enter your personal details to create account</p>
                                    </div>

                                    <form class="row g-3 needs-validation" method="post" action="RegisterCustomer">
                                        <div class="col-12">
                                            <label for="yourName" class="form-label">First Name</label>
                                            <input type="text" asp-for="FirstName" name="FirstName" placeholder="First Name" class="form-control" /><br />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="col-12">
                                            <label for="yourName" class="form-label">Middle Name</label>
                                            <input type="text" asp-for="MiddleName" name="MiddleName" placeholder="Middle Name" class="form-control" /><br />
                                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                                        </div>
                                        <div class="col-12">
                                            <label for="yourName" class="form-label">Last Name</label>
                                            <input type="text" asp-for="LastName" name="LastName" placeholder="Last Name" class="form-control" /><br />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                        <div class="col-12">
                                            <label for="yourName" class="form-label">Gender</label>
                                            <select asp-for="Gender" type="text" name="Gender" class="form-control" required>
                                                <option>Male</option>
                                                <option>FeMale</option>
                                            </select>
                                            <div class="invalid-feedback">Please, enter your name!</div>
                                            <span asp-validation-for="Gender"></span>
                                        </div>
                                        <div class="col-12">
                                            <label for="yourEmail" class="form-label">Your Email</label>
                                            <input asp-for="Email" type="email" name="email" class="form-control" required>
                                            <div class="invalid-feedback">Please enter a valid Email adddress!</div>
                                            <span asp-validation-for="Email"></span>
                                        </div>

                                        <div class="col-12">
                                            <label for="yourUsername" class="form-label">Phone No</label>
                                            <div class="input-group has-validation">
                                                <span class="input-group-text" id="inputGroupPrepend"></span>
                                                <input asp-for="PhoneNo" type="text" name="PhoneNo" class="form-control" required>
                                                <div class="invalid-feedback">Please enter your Phone No</div>
                                                <span asp-validation-for="PhoneNo"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="yourName" class="form-label">Address</label>
                                            <input asp-for="Address" type="text" name="Address" class="form-control" required>
                                            <div class="invalid-feedback">Please, enter your name!</div>
                                            <span asp-validation-for="Address"></span>
                                        </div>

                                        <div class="col-12">
                                            <label for="yourPassword" class="form-label">Password</label>
                                            <input asp-for="Password" type="password" name="password" class="form-control" required>
                                            <div class="invalid-feedback">Please enter your password!</div>
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                        <div class="col-12">
                                            <label for="yourPassword" class="form-label">Confirm Password</label>
                                            <input asp-for="ConfirmPassword" type="password" name="Confirmpassword" class="form-control" required>
                                            <div class="invalid-feedback">Please enter your password!</div>
                                            <span asp-validation-for="ConfirmPassword"></span>
                                        </div>

                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Create Account</button>
                                        </div>
                                        <div class="col-12">
                                            <p class="small mb-0">Already have an account? <a asp-controller="Auth" asp-action="Login">Log in</a></p>
                                        </div>
                                    </form>

                                </div>
