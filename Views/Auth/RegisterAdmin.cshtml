@model AimsCarRentals.Models.ViewModel.RegisterAdminViewModel


<form method="post">
    <div class="container">
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>

        <label for="email"><b>First Name</b></label>
        <input type="text" placeholder="First Name" name="FirstName" asp-for="FirstName" required>
        <span asp-validation-for="FirstName"></span>

        <label for="email"><b>Middle Name</b></label>
        <input type="text" placeholder="Middle Name" name="MiddleName" asp-for="MiddleName" required>
        <span asp-validation-for="MiddleName"></span>

        <label for="email"><b>Last Name</b></label>
        <input type="text" placeholder="Last Name" name="LastName" asp-for="LastName" required>
        <span asp-validation-for="LastName"></span>

        <label for="email"><b>Gender</b></label>
        <input type="radio" placeholder="Gender" name="Gender" asp-for="Gender" value="Male" required>
        <input type="radio" placeholder="Gender" name="Gender" asp-for="Gender" value="Female" required>
        <span asp-validation-for="Gender"></span>

        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="Email" asp-for="Email" required>
        <span asp-validation-for="Email"></span>

        <label for="email"><b>Date of Birth</b></label>
        <input type="date" placeholder="Date of Birth" name="DateOfBirth" asp-for="DateOfBirth" required>
        <span asp-validation-for="DateOfBirth"></span>

        <label for="email"><b>Phone No</b></label>
        <input type="text" placeholder="Phone No" name="Email" asp-for="PhoneNo" required>
        <span asp-validation-for="PhoneNo"></span>

        <label for="email"><b>Address</b></label>
        <input type="text" placeholder="Address" name="Address" asp-for="Address" required>
        <span asp-validation-for="Address"></span>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" asp-for="Password" required>
        <span asp-validation-for="Password"></span>

        <label for="psw-repeat"><b>Repeat Password</b></label>
        <input type="password" placeholder="Repeat Password" name="psw-repeat" asp-for="ConfirmPassword" required>
        <span asp-validation-for="ConfirmPassword"></span>

        <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

        <div class="clearfix">
            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
            <button type="submit" class="signupbtn">Register</button>
        </div>
    </div>
</form>

