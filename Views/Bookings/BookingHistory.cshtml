@model IEnumerable<AimsCarRentals.Models.Bookings>

    <style>
        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #ddd;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }
    </style>
    <div class="container">

        <h2>Your Booking History</h2>
        <br />
        <br />
        <br />
        <a asp-controller="Car" asp-action="SelectCar" class="btn btn-danger">Make A New Booking</a>
        <br />
        <br />
        <div>
            <table>
                <tr>
                   
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>BookingsId</th>
                    <th>CarId</th>
                    <th>UserId</th>
                    <th>Booking Ref</th>
                </tr>
                @foreach (var bookings in Model)
                {
                    <tr>
                        <td>@bookings.User.FirstName</td>
                        <td>@bookings.User.MiddleName</td>
                        <td>@bookings.User.LastName</td>
                        <td>@bookings.User.Email</td>
                        <td>@bookings.Id</td>
                        <td>@bookings.CarId</td>
                        <td>@bookings.UserId</td>
                        <td>@bookings.Booking_ref</td>

                    </tr>

                }
            </table>
        </div>
    </div>