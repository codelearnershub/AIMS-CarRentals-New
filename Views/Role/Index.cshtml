@model IEnumerable<AimsCarRentals.Models.ViewModel.RoleViewModel>
@{
    ViewData["Title"] = "Category";
    int id = 1;
}

<style>
    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: left;
        padding: 16px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }
</style>


<h2>Role Table</h2>
<a asp-controller="Role" asp-action="Create" class="btn-dark" style="width:100%">Create</a>
<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@(id++)</td>
            <td>@role.Name</td>
            <td>
                <a asp-controller="Bookings" asp-action="Details" class="btn btn-danger" asp-route-Id="@role.Id">Details</a>
                <a asp-controller="Bookings" asp-action="Edit" class="btn btn-danger" asp-route-Id="@role.Id">Edit</a>
                <a asp-controller="Bookings" asp-action="Delete" class="btn btn-danger" asp-route-Id="@role.Id">Delete</a>
            </td>
        </tr>
    }
</table>

