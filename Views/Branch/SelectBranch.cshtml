@model IEnumerable<AimsCarRentals.Models.ViewModel.BranchViewModel>
    <!DOCTYPE html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            body {
                margin: 0;
                font-family: Arial, Helvetica, sans-serif;
            }

            .topnav {
                overflow: hidden;
                background-color: #333;
            }

                .topnav a {
                    float: left;
                    color: #f2f2f2;
                    text-align: center;
                    padding: 14px 16px;
                    text-decoration: none;
                    font-size: 17px;
                }

                    .topnav a:hover {
                        background-color: #ddd;
                        color: black;
                    }

                    .topnav a.active {
                        background-color: #4CAF50;
                        color: white;
                    }

            .topnav-right {
                float: right;
            }
        </style>
    </head>
    <body>

        <div class="topnav">
            <a class="active" asp-controller="Home" asp-action="Index">NijMar</a>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Branch" asp-action="SelectBranch">Branches</a>
            <a asp-controller="Car" asp-action="SelectCar">Car</a>
            <div class="topnav-right">
                <a href="#about">About</a>
                <a asp-controller="Auth" asp-action="Login">Login/Register</a>
            </div>
        </div>
    </body>
    <div class="container">
        <h2>Our Branches</h2>
        <p>Choose At Your Convenient</p>
        <br>


        @foreach (var branch in Model)
        {
            <div class="column">
                <div class="row">
                    <div class="card" @* style="width:15%"*@>
                        <div class="card-header">
                            <h4>@branch.Name <span>Branch</span></h4>
                        </div>
                        <div class="text" style="background-color:black">
                            <div class="d-flex mb-3">
                                <div class="container">
                                    <label style="color:cadetblue"><b>Address:</b></label>
                                    <span style="color:orangered;font-display:fallback;font-family:'Times New Roman', Times, serif">@branch.Address</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-header">
                            <p>
                                <a asp-controller="Car" asp-action="GetAllCarsPerEachBranch" asp-route-Id="@branch.Id" class="btn btn-danger">Select Car</a> &nbsp;

                            </p>
                        </div>

                    </div>
                </div>
            </div>

        }

    </div>

