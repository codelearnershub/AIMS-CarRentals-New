@model IEnumerable<AimsCarRentals.Models.ViewModel.BranchViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

.column {
  float: left;
  width: 33.3%;
  margin-bottom: 16px;
  padding: 0 8px;
}

  .column {
    width: 100%;
    display: block;
  }


.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
}

.container {
  padding: 0 16px;
}

.container::after, .row::after {
  content: "";
  clear: both;
  display: table;
}

.title {
  color: grey;
}

.button {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
}

.button:hover {
  background-color: #555;
}
    </style>
</head>
<body>

    <h2>Our Branches</h2>
    <p>Choose Your Convenient</p>
    <br>

    <div class="row">
        @foreach (var branch in Model)
        {


        <div class="column">
            <div class="card">@*
                <img src="../w3images/team1.jpg" alt="Jane" style="width:100%">*@
                <div class="container">
                    <h2>Name: @branch.Name</h2>
                    <p>@branch.Address</p>
                    <p><a asp-controller="Car" asp-action="SelectCar" asp-route-Id="@branch.Id" class="button">Contact</a></p>
                </div>
            </div>
        </div>
        }
    </div>

</body>

