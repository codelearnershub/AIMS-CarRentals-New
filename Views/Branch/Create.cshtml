@model AimsCarRentals.Models.ViewModel.CreateBranchViewModel
<div class="card header"><h3>Add Branch</h3></div>

<div class="container">
    <div class="card-body">
        <label for="uname"><b>Name</b></label>
        <input type="text" placeholder="Name" name="Name" required>
        <span asp-validation-for="Name"></span>

        <label for="psw"><b>Address</b></label>
        <input type="password" placeholder="Address" name="Address" required>
        <span asp-validation-for="Address"></span>
    </div>
    <button class="justify-content-between" type="submit">Create</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
